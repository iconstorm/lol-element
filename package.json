{
  "name": "@iconstorm/lol-element",
  "version": "1.0.0-beta.1",
  "description": "A base class for creating Web Components like you know what you're doing",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./src/lol-element.js",
  "exports": {
    ".": "./src/lol-element.js",
    "./preact": "./src/preact/lol.js",
    "./preact/*": "./src/preact/*.js",
    "./uhtml": "./src/uhtml/lol.js",
    "./uhtml/*": "./src/uhtml/*.js",
    "./lit-html": "./src/lit-html/lol.js",
    "./lit-html/*": "./src/lit-html/*.js"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "start": "vite serve examples",
    "lint": "eslint src/**/*.js",
    "test": "npm run lint && vite serve test"
  },
  "author": "Arturo Castillo Delgado <ac@iconstorm.com>",
  "repository": "iconstorm/lol-element",
  "license": "MIT",
  "peerDependencies": {
    "htm": "^3",
    "lit-html": ">= 1 <3",
    "preact": "^10",
    "uhtml": "^3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.13.10",
    "eslint": "^7.21.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "qunit": "^2.14.1",
    "vite": "^2.3.8"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "standard"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false,
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {}
  }
}
